<main class="main-content mt-0 ps">
    <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg"
        style="background-image: url('/assets/img/curved-images/curved8.jpg');">
        <span class="mask bg-gradient-dark opacity-6"></span>
    </div>
    <div class="container">
        <div class="row mt-lg-n10 mt-md-n11 mt-n10 justify-content-center">
            <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="info mb-4">
                            <img class="avatar avatar-xxl" alt="Image placeholder"
                                src="/uploads/accounts/{{user.avatar}}">
                        </div>
                        <h4 class="mb-0 font-weight-bolder">{{user.name}}</h4>
                        <p class="mb-4">Enter new password to continue.</p>
                        <form role="form">
                            <input type="text" id="accountId" value="{{user.Id}}" hidden>
                            <div class="mb-3">
                                <input type="password" id="newPassword" class="form-control" placeholder="New password">
                            </div>
                            <div class="mb-3">
                                <input type="password" id="confirmPassword" class="form-control"
                                    placeholder="Confirm password">
                            </div>
                            <div class="text-center">
                                <button type="button" id="changeBtn" class="btn btn-md bg-gradient-dark mt-3 mb-0"
                                    disabled onclick="passwordChange()">Update password</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>