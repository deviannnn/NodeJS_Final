                                                                    <th></th>
                                                                    <th></th>
                                                                    <th class="h7 text-dark ps-4 pb-0" colspan="2">Grand
                                                                        Total:
                                                                    </th>
                                                                    <th colspan="1"
                                                                        class="text-end h7 text-dark ps-4 pb-0">
                                                                        2323</th>
                                                                </tr>
                                                            </tfoot>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Edit -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="modal-default" aria-hidden="true">
    <div class="modal-dialog modal- modal-dialog-centered modal-" role="document" style="width: 400px">
        <div class="modal-content">
            <div class="modal-header">
                <div>
                    <h6 class="modal-title font-weight-bolder">Edit Customer</h6>
                </div>
                <button type="button" class="btn-close text-dark" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body row">
                <input type="text" id="Id" hidden>
                <div class="col-12">
                    <label>Full Name</label>
                    <input class="form-control" type="text" id="name" placeholder="eg. Nguyen Van A">
                </div>
                <div class="col-12 mt-3">
                    <label>Phone Number</label>
                    <input class="form-control" type="text" id="phone" placeholder="eg. 0987654321">
                </div>
                <div class="col-12 mt-3">
                    <label>Validate Password</label>
                    <input class="form-control" type="password" id="password" placeholder="Admin Validate">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn bg-gradient-secondary ml-auto mb-0"
                    data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn bg-gradient-dark mb-0" onclick="updateCustomer()">Update</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Delete -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="delete-modal" aria-hidden="true">
    <div class="modal-dialog modal-danger modal-dialog-centered modal-" role="document">
        <div class="modal-content">
            <div class="modal-body p-4">
                <div class="text-center">
                    <div class="swal2-icon swal2-warning swal2-icon-show" style="display: flex; margin-top: 15px;">
                        <div class="swal2-icon-content">!</div>
                    </div>
                    <h3 class="font-weight-bolder opacity-9 mt-4">Are you sure?</h3>
                    <p>You won't be able to revert this customer <span class="current-customer text-bolder"></span>!
                    </p>
                </div>
                <div class="d-flex justify-content-center mt-4">
                    <input type="text" id="delete-customer-id" hidden>
                    <button type="button" class="btn btn bg-gradient-success mx-2" data-bs-dismiss="modal"
                        onclick="confirmDel()">Yes, Delete it!</button>
                    <button type="button" class="btn bg-gradient-danger mx-1" data-bs-dismiss="modal">No,
                        Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>