<!-- Modal Toggle Lock -->
<div class="modal fade" id="toggleLockModal" tabindex="-1" role="dialog" aria-labelledby="delete-modal"
    aria-hidden="true">
    <div class="modal-dialog modal-danger modal-dialog-centered modal-" role="document">
        <div class="modal-content">
            <div class="modal-body p-4">
                <div class="text-center">
                    <div id="lock-status">
                        <div class="swal2-icon swal2-danger swal2-icon-show" style="display: flex; margin-top: 15px;">
                            <div class="swal2-icon-content"><i class="fas fa-lock"></i></div>
                        </div>
                        <p>
                            You will <span class="text-bolder text-danger">Lock</span>
                            <span class="lock-name text-bolder"></span>'s account and
                            <span class="lock-gender"></span> won't be able to use this website anymore.
                        </p>
                    </div>
                    <div id="unlock-status">
                        <div class="swal2-icon swal2-success swal2-icon-show" style="display: flex; margin-top: 15px;">
                            <div class="swal2-icon-content"><i class="fas fa-unlock"></i></div>
                        </div>
                        <p>
                            You will <span class="text-bolder text-success">Unlock</span>
                            <span class="lock-name text-bolder"></span>'s account and
                            <span class="lock-gender"></span> will continue to be able to use this website.
                        </p>
                    </div>
                </div>
                <div class="d-flex justify-content-center mt-4">
                    <input type="text" id="lockedId" hidden>
                    <input type="text" id="lockedValue" hidden>
                    <button type="button" class="btn btn bg-gradient-success mx-2" data-bs-dismiss="modal"
                        id="confirm-lock-btn">Yes!</button>
                    <button type="button" class="btn bg-gradient-danger mx-1" data-bs-dismiss="modal">No,
                        Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
